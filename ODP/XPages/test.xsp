<?xml version="1.0" encoding="UTF-8"?>
<xp:view
  xmlns:xp="http://www.ibm.com/xsp/core"
  xmlns:xc="http://www.ibm.com/xsp/custom"
  createForm="false">
  
  <xp:this.resources>
    <xp:script
      src="sortable.js"
      clientSide="true"></xp:script>
    <xp:styleSheet
      href="/sortable.min.css"></xp:styleSheet>
  </xp:this.resources>
  <xp:div
    styleClass="uk-container uk-container-center">
    <xc:ccUIgrid
      evenGrid="false"
      isResponsive="false"
      sortable="true"
      matchHeight="true"
      rowBreak="true"
      gutter="small">
      <xc:ccUIpanel
        panelColor="default"
        roundedCorner="false"
        panelTitle="Panel 1">
        <xp:div>Panel 3 content</xp:div>
      </xc:ccUIpanel>
      <xc:ccUIcolumn
        isEvenGrid="false"
        isReponsive="true"
        ukWidthLarge="1-5"
        ukWidthMedium="1-3"
        ukWidthSmall="1-2">
        <xc:ccUIpanel
          panelColor="success"
          roundedCorner="true"
          panelTitle="Panel 1">
          <xp:div>Panel 1 content</xp:div>
        </xc:ccUIpanel>
      </xc:ccUIcolumn>
      <xc:ccUIcolumn
        isEvenGrid="false"
        isReponsive="true"
        ukWidthLarge="2-5"
        ukWidthMedium="1-3"
        ukWidthSmall="1-2">
        <xc:ccUIpanel
          panelColor="info"
          roundedCorner="true"
          panelTitle="Panel 2">
          <xp:div>Panel 2 content</xp:div>
        </xc:ccUIpanel>
      </xc:ccUIcolumn>
      <xc:ccUIcolumn
        isEvenGrid="false"
        isReponsive="true"
        ukWidthLarge="1-5"
        ukWidthMedium="1-3"
        ukWidthSmall="1-2">
        <xc:ccUIpanel
          panelColor="default"
          roundedCorner="false"
          panelTitle="Panel 3">
          <xp:div>Panel 3 content</xp:div>
        </xc:ccUIpanel>
      </xc:ccUIcolumn>
      <xc:ccUIcolumn
        isEvenGrid="false"
        isReponsive="true"
        ukWidthLarge="1-5"
        ukWidthMedium="1-3"
        ukWidthSmall="1-2">
        <xc:ccUIpanel
          panelColor="default"
          roundedCorner="false"
          panelTitle="Panel 4">
          <xp:div>Panel 3 content</xp:div>
        </xc:ccUIpanel>
      </xc:ccUIcolumn>
    </xc:ccUIgrid>
    <xc:ccUIpanel
      panelColor="default"
      roundedCorner="false"
      panelTitle="Extra panel">
      <xp:this.facets>
        <xp:table
          style="width:50.0px"
          xp:key="panelContent"
          border="1">
          <xp:tr>
            <xp:td>1</xp:td>
            <xp:td>6</xp:td>
            <xp:td>7</xp:td>
            <xp:td>8</xp:td>
            <xp:td>9</xp:td>
          </xp:tr>
          <xp:tr>
            <xp:td>2</xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
          </xp:tr>
          <xp:tr>
            <xp:td>3</xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
          </xp:tr>
          <xp:tr>
            <xp:td>4</xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
          </xp:tr>
          <xp:tr>
            <xp:td>5</xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
            <xp:td></xp:td>
          </xp:tr>
        </xp:table>
      </xp:this.facets>
    </xc:ccUIpanel>
  </xp:div><!--  container -->
  
  
  </xp:view>